{
    "name": "@river-build/bot-hub-good-morning-bot",
    "version": "1.0.0",
    "description": "bot sample",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "scripts": {
        "my-node": "node --experimental-loader ./custom-loader.mjs",
        "build": "yarn tsc",
        "start": "yarn my-node --env-file .env ./dist/index.js",
        "dev": "nodemon"
    },
    "dependencies": {
        "@river-build/sdk": "^0.0.11",
        "fake-indexeddb": "^6.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.14.10",
        "nodemon": "^3.1.4",
        "typescript": "^5.5.3"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "yarn build && yarn start",
        "ext": "ts"
    },
    "packageManager": "yarn@3.8.0"
}
