{
    "name": "@river-build/react-sdk",
    "version": "0.0.88",
    "description": "React Hooks for River SDK",
    "repository": {
        "type": "git",
        "url": "https://github.com/river-build/river.git",
        "directory": "packages/react"
    },
    "scripts": {
        "build": "yarn run clean && yarn run build:esm+types",
        "build:esm+types": "tsc --project tsconfig.build.json --outDir ./dist/esm --declaration --declarationMap --declarationDir ./dist/types",
        "clean": "rm -rf dist tsconfig.tsbuildinfo",
        "watch": "yarn build -w",
        "test:build": "publint --strict && attw --pack --ignore-rules cjs-resolves-to-esm",
        "typecheck": "tsc --noEmit"
    },
    "files": [
        "dist/**",
        "!dist/**/*.tsbuildinfo",
        "src/**/*.ts",
        "!src/**/*.test.ts",
        "!src/**/*.test-d.ts"
    ],
    "sideEffects": false,
    "type": "module",
    "main": "./dist/esm/index.js",
    "types": "./dist/types/index.d.ts",
    "typings": "./dist/types/index.d.ts",
    "peerDependencies": {
        "react": "^18.2.0",
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "@river-build/sdk": "workspace:^",
        "ethers": "^5.7.2"
    },
    "devDependencies": {
        "@testing-library/react": "^14.2.1",
        "@types/react": "^18.2.11",
        "@types/react-dom": "^18.2.4",
        "@typescript-eslint/eslint-plugin": "^8.11.0",
        "@typescript-eslint/parser": "^8.11.0",
        "eslint": "^8.53.0",
        "eslint-plugin-import": "^2.30.0",
        "eslint-plugin-react": "^7.36.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typescript": "^5.6.3"
    },
    "keywords": [
        "react",
        "sdk",
        "hooks",
        "web3",
        "river"
    ]
}
