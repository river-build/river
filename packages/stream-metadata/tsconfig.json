{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2022",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true
	},
	"include": ["src/**/*.ts", "src/testUtils.ts"],
	"exclude": ["node_modules", "tests"]
}
