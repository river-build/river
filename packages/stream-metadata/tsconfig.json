{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2022",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": ".",  // Now both 'src' and 'tests' are included
		"sourceMap": true
	},
	"include": [
        "src/**/*.ts",
    ],
	"exclude": ["node_modules", "dist", "tests"]
}
